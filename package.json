{
  "name": "polar-treasure",
  "version": "0.1.0",
  "private": true,
  "description": "Starter for Phaser 3 + TypeScript + Vite + PWA (offline forever), deployable to GitHub Pages.",
  "license": "GPL-3.0-only",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "ts-node --esm --transpile-only tools/gen-assets.ts && vite build",
    "preview": "vite preview --host",
    "deploy": "vite build && gh-pages -d dist -b gh-pages"
  },
  "dependencies": {
    "phaser": "^3.70.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "gh-pages": "^6.1.1",
    "pngjs": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vite-plugin-pwa": "^0.20.5"
  },
  "engines": {
    "node": ">=20"
  }
}
